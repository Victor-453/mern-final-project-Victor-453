{
  "name": "cartify",
  "version": "1.0.0",
  "description": "Modern E-commerce Platform - Cartify",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cross-env NODE_ENV=development nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "start": "cross-env NODE_ENV=production node backend/server.js",
     "install-all": "npm install && npm install --prefix frontend",
     "seed": "node backend/seed.js"
  },
  "keywords": ["ecommerce", "mern", "react", "tailwind", "chakra-ui"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11"
  }
}
