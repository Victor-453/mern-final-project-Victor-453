{
  "name": "cartify",
  "version": "1.0.0",
  "description": "Modern E-commerce Platform - Cartify",
  "main": "index.js",
  "scripts": {
    "install:backend": "npm install",
    "install:frontend": "npm --prefix frontend install",
    "build:frontend": "npm --prefix frontend run build",
    "build": "npm run install:backend && npm run install:frontend && npm run build:frontend",
    "start": "cross-env NODE_ENV=production node backend/server.js",
    "dev": "concurrently \"nodemon backend/server.js\" \"npm --prefix frontend run dev\"",
    "seed": "node backend/seed.js"
  },
  "keywords": ["ecommerce", "mern", "react", "tailwind", "chakra-ui"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11"
  }
}
